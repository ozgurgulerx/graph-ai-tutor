# Copy this file to `.env` for local development.
#
# Postgres (docker-compose.yml exposes Postgres on localhost:5433)
DATABASE_URL=postgres://graph:graph@localhost:5433/graph_ai_tutor
# Optional: store Postgres data in a local folder instead of a Docker named volume.
# Use a path (relative to repo root or absolute), e.g.:
# GRAPH_AI_TUTOR_PGDATA=./data/postgres
# GRAPH_AI_TUTOR_PGDATA=/absolute/path/to/graph-ai-tutor/postgres
#
# Default: Docker named volume `graph_ai_tutor_pg`
# GRAPH_AI_TUTOR_PGDATA=

# API server
HOST=127.0.0.1
PORT=3000

# Local vault (Phase 5)
# Where local Markdown sources (vault://...) are stored on disk.
GRAPH_AI_TUTOR_VAULT_DIR=./vault

# Crawler (Task 22)
# Comma/space-separated list of allowed domains (subdomains allowed).
CRAWLER_ALLOWLIST_DOMAINS=example.com

# OpenAI (for future LLM features)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NANO=gpt-5-nano
OPENAI_MODEL_MINI=gpt-5-mini
